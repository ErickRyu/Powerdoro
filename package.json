{
  "name": "powerdoro",
  "version": "0.0.3",
  "description": "Pomodoro timer with mandatory retrospective logging",
  "main": "dist/main/main.js",
  "build": {
    "appId": "com.electron.powerdoro",
    "productName": "Powerdoro",
    "files": [
      "dist/**/*",
      "view/**/*",
      "res/**/*",
      "settings-window-renderer.js"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["universal"]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "build/entitlements.mac.plist",
      "entitlementsInherit": "build/entitlements.mac.plist",
      "artifactName": "${productName}-${version}-${arch}.${ext}",
      "notarize": false
    },
    "mas": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "mas",
          "arch": ["universal"]
        }
      ],
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.inherit.plist",
      "provisioningProfile": "build/embedded.provisionprofile",
      "artifactName": "${productName}-${version}-mas.${ext}"
    },
    "dmg": {
      "sign": false,
      "contents": [
        { "x": 130, "y": 220 },
        { "x": 410, "y": 220, "type": "link", "path": "/Applications" }
      ]
    },
    "afterSign": "scripts/notarize.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "npm run build && electron .",
    "test": "jest",
    "pack": "npm run build && electron-builder --dir",
    "dist": "npm run build && electron-builder",
    "dist:dmg": "npm run build && electron-builder --mac dmg",
    "dist:mas": "npm run build && electron-builder --mac mas"
  },
  "repository": "",
  "keywords": [
    "Electron",
    "pomodoro",
    "timer",
    "productivity",
    "retrospective"
  ],
  "author": "rkggmdii@gmail.com",
  "license": "MIT",
  "devDependencies": {
    "@electron/notarize": "^2.5.0",
    "@types/jest": "^29.5.14",
    "electron": "^33.0.0",
    "electron-builder": "^25.1.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "electron-store": "^8.2.0",
    "electron-traywindow-positioner": "^1.1.1"
  }
}
